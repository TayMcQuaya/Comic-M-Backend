# Nginx configuration for Comic-Pro PDF Service
# Place this in /etc/nginx/sites-available/comic-pro-pdf
# Then enable with: sudo ln -s /etc/nginx/sites-available/comic-pro-pdf /etc/nginx/sites-enabled/

upstream comic_pdf_backend {
    server 127.0.0.1:3001;
}

server {
    listen 80;
    server_name your-domain.com;  # Replace with your actual domain
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name your-domain.com;  # Replace with your actual domain

    # SSL Configuration (use Let's Encrypt or your SSL certificates)
    ssl_certificate /etc/letsencrypt/live/your-domain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/your-domain.com/privkey.pem;
    
    # Security headers
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Proxy settings
    location / {
        proxy_pass http://comic_pdf_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Timeouts for PDF generation
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        
        # File upload limits
        client_max_body_size 100M;
    }

    # Health check endpoint (no auth required)
    location /health {
        proxy_pass http://comic_pdf_backend;
        access_log off;
    }

    # Static files (if any)
    location /static/ {
        alias /home/ubuntu/comic-pro-pdf-service/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
} 